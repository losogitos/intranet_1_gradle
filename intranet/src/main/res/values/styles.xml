<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/app_bkg</item>
        <item name="android:windowContentOverlay">@drawable/shadow</item>
        <item name="android:actionBarStyle">@style/ActionBarCustom</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="ActionBarCustom" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/dark_texture_repeat</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="titleTextStyle">@style/TitleTextStyle</item>
    </style>
    
    <style name="TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
